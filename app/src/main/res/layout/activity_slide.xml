<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:onClick="disableSlide"
      android:text="当前滑动开启"
      />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:onClick="enableEdgeSlide"
      android:text="当前全局侧滑"
      />

  <TextView
      android:id="@+id/txt_edge_range"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      />

  <SeekBar
      android:id="@+id/sb_edge_range"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:max="100"
      android:progress="0"
      />

  <TextView
      android:id="@+id/txt_slide_out_range_h"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      />

  <SeekBar
      android:id="@+id/sb_slide_out_range_h"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:max="100"
      android:progress="0"
      />

  <TextView
      android:id="@+id/txt_slide_out_range_v"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      />

  <SeekBar
      android:id="@+id/sb_slide_out_range_v"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:max="100"
      android:progress="0"
      />

</LinearLayout>
